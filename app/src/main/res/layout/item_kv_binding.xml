<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bindingNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY_KV"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:lineHeight="20sp"
                android:background="@drawable/bg_title_rounded" />

            <TextView
                android:id="@+id/namespaceIdText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Namespace ID: abc123"
                android:textSize="11sp"
                android:textColor="?attr/colorOutline"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.01"
                android:lineHeight="15sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/deleteBindingBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="删除绑定" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
