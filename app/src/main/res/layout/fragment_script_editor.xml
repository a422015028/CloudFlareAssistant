<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurface"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="编辑脚本"
            app:titleTextColor="?attr/colorOnSurface">

            <!-- Undo Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUndo"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="0dp"
                android:contentDescription="撤销"
                app:icon="@drawable/ic_undo" />

            <!-- Select All Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectAll"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="0dp"
                android:contentDescription="全选"
                app:icon="@drawable/ic_select_all" />

            <!-- Version History Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVersionHistory"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="4dp"
                android:contentDescription="版本历史"
                app:icon="@drawable/ic_history" />
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible" />

        <!-- WebView Container -->
        <FrameLayout
            android:id="@+id/webViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Search Bar Overlay -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/searchInputLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="搜索"
                        app:boxCornerRadiusTopStart="4dp"
                        app:boxCornerRadiusTopEnd="4dp"
                        app:boxCornerRadiusBottomStart="4dp"
                        app:boxCornerRadiusBottomEnd="4dp"
                        app:endIconMode="clear_text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/searchInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Search Navigation Buttons -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPrevMatch"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="上一个"
                        app:icon="@drawable/ic_arrow_up" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNextMatch"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="下一个"
                        app:icon="@drawable/ic_arrow_down" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCloseSearch"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="关闭"
                        app:icon="@drawable/ic_close" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </FrameLayout>

        <!-- Bottom Action Bar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center">

                <!-- Copy Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopy"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="复制"
                    app:icon="@drawable/ic_content_copy" />

                <!-- Manual Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManualSave"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="保存"
                    app:icon="@drawable/ic_save" />

                <!-- Upload Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpload"
                    style="@style/Widget.Material3.Button.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上传"
                    app:icon="@drawable/ic_cloud_upload" />

                <!-- Search Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSearch"
                    style="@style/Widget.Material3.Button.TextButton.Icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="搜索"
                    app:icon="@drawable/ic_search" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>
