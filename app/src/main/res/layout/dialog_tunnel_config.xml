<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="入站规则 (Ingress)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="配置流量转发规则"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Ingress Rules List -->
        <LinearLayout
            android:id="@+id/ingressRulesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical" />

        <!-- Add Rule Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addIngressRuleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="添加规则"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="?android:attr/listDivider" />

        <!-- WARP Routing -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WARP 路由"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/warpRoutingSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="启用 WARP 路由"
            android:checked="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="允许 WARP 客户端通过此隧道路由流量"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>
</ScrollView>
